{
    "comments": {
        "lineComment": "#"
    },
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    "autoClosingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"]
    ],
    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"]
    ],
    "folding": {
        "markers": {
            "start": "^\\s*(test|doc):",
            "end": "^\\s*(?!(\\s+|$))"
        }
    },
    "indentationRules": {
        "increaseIndentPattern": "^\\s*(test|doc):\\s*$",
        "decreaseIndentPattern": "^\\s*(?!(\\s+|$))"
    }
}
